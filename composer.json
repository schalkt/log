{
    "name": "schalkt/log",
    "description": "Simple and easy configurable PHP logfile system",
    "keywords": [
        "log",
        "php",
        "simple",
        "easy",
        "configurable"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Tamas Schalk",
            "homepage": "https://github.com/schalkt"
        }
    ],
    "require": {
        "php": "8.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1"
    },
    "autoload": {
        "psr-4": {
            "Schalkt\\Slog\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Schalkt\\Slog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit"
        ]
    }
}
